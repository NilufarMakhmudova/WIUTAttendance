@model IEnumerable<AttendanceApplication.Models.Group>

@{
    ViewBag.Title = "Groups";
}




<h2>Groups</h2>
<hr>
@using (Html.BeginForm())
{

    <div class="form-horizontal">
        <h3> Specify the parameters for groups:</h3>
        

        <div class="row">
            <div class="col-md-3 col-md-offset-0">
                @Html.DropDownList("course", new SelectList(ViewBag.Course), "Course", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-3 col-md-offset-0">
                @Html.DropDownList("time", new SelectList(ViewBag.Time), "Academic year and period", htmlAttributes: new { @class = "form-control" })
            </div>
            <div class="col-md-3 col-md-offset-0">
                @Html.DropDownList("level", new SelectList(ViewBag.Level), "Level", htmlAttributes: new { @class = "form-control" })
            </div>
            <input type="submit" value="Filter" class=" btn btn-primary col-md-2 col-md-offset-0" />
        </div>
        
    </div>
}
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-hover">
    <tr>
        <th>
            @Html.ActionLink("Group name", "Index", new { sortOrder = ViewBag.GroupNameSortParm })
        </th>
        <th>
            @Html.ActionLink("Level", "Index", new { sortOrder = ViewBag.LevelSortParm })
        </th>
        <th>
            @Html.ActionLink("Academic year", "Index", new { sortOrder = ViewBag.YearSortParm })
        </th>
        <th>
            @Html.ActionLink("Period", "Index", new { sortOrder = ViewBag.PeriodSortParm })
        </th>
        <th>
            @Html.ActionLink("Course name", "Index", new { sortOrder = ViewBag.CourseNameSortParm })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Level)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time.AcademicYear)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time.Period)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Course.Name)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Manage students", "ManageStudents", new { id = item.ID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.ID})
            </td>
        </tr>
    }

</table>
